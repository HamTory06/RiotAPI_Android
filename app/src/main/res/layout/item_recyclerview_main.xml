<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="RecyclerView"
            type="com.api.study.riot_api.ui.adapter.Main_RecyclerAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Champion_Profile_icon"
            android:src="@drawable/img"
            android:background="@drawable/champion_profile_icon_background"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/level"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="18"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/champion_level_background"
            app:layout_constraintBottom_toBottomOf="@+id/Champion_Profile_icon"
            app:layout_constraintEnd_toEndOf="@+id/Champion_Profile_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>